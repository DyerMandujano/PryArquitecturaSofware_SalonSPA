@model Pry_Solu_SalonSPA.ViewModels.VentaRegistrarVM

@{
    ViewData["Title"] = "Registrar Venta";

    // Protección contra nulos
    var empleados = Model.Empleados ?? new List<Pry_Solu_SalonSPA.Models.Empleado>();
    var tiposPago = Model.TiposPago ?? new List<Pry_Solu_SalonSPA.Models.TipoPago>();
    var tiposComprobante = Model.TiposComprobante ?? new List<Pry_Solu_SalonSPA.Models.TipoComprobante>();
    var productos = Model.Productos ?? new List<Pry_Solu_SalonSPA.Models.Producto>();
}

<link href="~/css/VVentas/_RegistrarVentas.css" rel="stylesheet" />

<div class="registrar-venta-wrapper">
    <h2 class="registrar-venta-title">Registrar Venta</h2>

    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-success">@TempData["Mensaje"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <form asp-action="Registrar" method="post" id="form-venta">
        @Html.AntiForgeryToken()

        <!-- CABECERA DE VENTA -->
        <div class="cabecera-venta">
            <h4 class="cabecera-title">Datos de la Venta</h4>
            <div class="cabecera-grid">
                <div class="form-group">
                    <label asp-for="FechaVenta">Fecha de Venta *</label>
                    <input asp-for="FechaVenta" type="datetime-local" class="form-control"
                           value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" required />
                    <span asp-validation-for="FechaVenta" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IdCliente">Cliente *</label>
                    <select asp-for="IdCliente" class="form-control" required id="select-cliente">
                        <option value="">Seleccione cliente...</option>
                    </select>
                    <span asp-validation-for="IdCliente" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IdEmpleado">Empleado *</label>
                    <select asp-for="IdEmpleado" class="form-control" required
                            asp-items="@(new SelectList(empleados, "Id_Empleado", "Nombre"))">
                        <option value="">Seleccione empleado...</option>
                    </select>
                    <span asp-validation-for="IdEmpleado" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IdTipoPago">Método de Pago *</label>
                    <select asp-for="IdTipoPago" class="form-control" required
                            asp-items="@(new SelectList(tiposPago, "Id_Tipo_Pago", "Descripcion"))">
                        <option value="">Seleccione método...</option>
                    </select>
                    <span asp-validation-for="IdTipoPago" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IdTipoComprobante">Tipo de Comprobante *</label>
                    <select asp-for="IdTipoComprobante" class="form-control" required
                            asp-items="@(new SelectList(tiposComprobante, "Id_TipoCompro", "Descripcion"))">
                        <option value="">Seleccione comprobante...</option>
                    </select>
                    <span asp-validation-for="IdTipoComprobante" class="text-danger"></span>
                </div>
            </div>
        </div>

        <hr />

        <!-- DETALLES DE VENTA -->
        <div class="detalles-venta">
            <h4 class="detalles-title">Productos / Servicios</h4>

            <table class="table table-bordered" id="tabla-detalles">
                <thead class="table-dark">
                    <tr>
                        <th>Producto / Servicio</th>
                        <th>Cantidad</th>
                        <th>Precio Unitario</th>
                        <th>Subtotal</th>
                        <th>Acción</th>
                    </tr>
                </thead>
                <tbody id="tbody-detalles">
                    <!-- Al inicio tabla vacía, se agregan filas dinámicamente -->
                </tbody>
            </table>

            <button type="button" class="btn btn-primary" id="btn-agregar-producto">
                + Agregar Producto
            </button>
        </div>

        <!-- TOTAL GENERAL -->
        <div class="total-container mt-3">
            <label>Total General</label>
            <input type="text" id="total-general" class="form-control" readonly value="0.00" />
        </div>

        <!-- BOTONES FINALES -->
        <div class="botones-final mt-3">
            <a href="@Url.Action("Index", "Ventas")" class="btn btn-secondary">Cancelar</a>
            <button type="submit" class="btn btn-success">Registrar Venta</button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        let filaIndex = 0;

        document.getElementById("btn-agregar-producto").addEventListener("click", function () {
            agregarFila();
        });

        function agregarFila() {
            let tbody = document.getElementById("tbody-detalles");

            let fila = document.createElement("tr");
            fila.setAttribute("data-index", filaIndex);

            fila.innerHTML = `
                <td>
                    <select name="Detalles[${filaIndex}].IdProducto" class="form-control select-producto" required>
                        <option value="">--Seleccione producto--</option>
                        @foreach (var prod in productos)
                        {
                                    <option value="@prod.IdProducto" data-precio="@prod.Precio">@prod.NomProd</option>
                        }
                    </select>
                    <input type="hidden" name="Detalles[${filaIndex}].TipoItem" value="Producto" />
                </td>
                <td>
                    <input type="number" name="Detalles[${filaIndex}].Cantidad" class="form-control cantidad" value="1" min="1" required />
                </td>
                <td>
                    <input type="number" step="0.01" name="Detalles[${filaIndex}].PrecioUnitario" class="form-control precio" min="0.01" required />
                </td>
                <td>
                    <input type="text" class="form-control subtotal" readonly value="0.00" />
                </td>
                <td>
                    <button type="button" class="btn btn-danger btn-sm" onclick="eliminarFila(this)">X</button>
                </td>
            `;

            tbody.appendChild(fila);
            configurarEventosFila(fila);
            filaIndex++;
        }

        function configurarEventosFila(fila) {
            let selectProducto = fila.querySelector(".select-producto");
            let cantidad = fila.querySelector(".cantidad");
            let precio = fila.querySelector(".precio");

            selectProducto.addEventListener("change", function () {
                let option = selectProducto.options[selectProducto.selectedIndex];
                let precioProducto = option.getAttribute("data-precio");
                if (precioProducto) precio.value = precioProducto;
                calcularSubtotal(fila);
            });

            cantidad.addEventListener("input", () => calcularSubtotal(fila));
            precio.addEventListener("input", () => calcularSubtotal(fila));
        }

        function calcularSubtotal(fila) {
            let cantidad = parseFloat(fila.querySelector(".cantidad").value) || 0;
            let precio = parseFloat(fila.querySelector(".precio").value) || 0;
            let subtotal = cantidad * precio;
            fila.querySelector(".subtotal").value = subtotal.toFixed(2);
            calcularTotal();
        }

        function calcularTotal() {
            let total = 0;
            document.querySelectorAll(".subtotal").forEach(s => {
                total += parseFloat(s.value) || 0;
            });
            document.getElementById("total-general").value = total.toFixed(2);
        }

        function eliminarFila(btn) {
            btn.closest("tr").remove();
            calcularTotal();
        }
    </script>
}
