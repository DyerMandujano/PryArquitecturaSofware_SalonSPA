@model Pry_Solu_SalonSPA.Models.Servicio

@{
    Layout = "~/Views/Main.cshtml";
    ViewData["Title"] = "Editar Servicio";
}

<link href="~/css/VServicios/_ServicioForm.css" rel="stylesheet" />

<div class="crear-servicio-wrapper">
    <div class="crear-servicio-box">
        <a asp-action="Index" class="btn-back">← Volver</a>

        <div class="header-crear">
            <h2>Editar Servicio</h2>
        </div>

        <form asp-action="Editar" method="post" class="form-crear">
            @Html.AntiForgeryToken()

            <!-- Campo oculto con el ID del servicio -->
            <input type="hidden" asp-for="IdServicio" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Nombre">Nombre del Servicio *</label>
                    <input asp-for="Nombre" class="editable-field" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IdTipoServicio">Tipo de Servicio *</label>
                    <select asp-for="IdTipoServicio" asp-items="ViewBag.TiposServicio" class="editable-field">
                        <option value="0">Seleccione un tipo</option>
                    </select>
                    <span asp-validation-for="IdTipoServicio" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group full-width">
                    <label asp-for="Descripcion">Descripción</label>
                    <textarea asp-for="Descripcion" class="editable-field" rows="3"></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Precio">Precio (S/.) *</label>
                    <input asp-for="Precio" type="number" step="0.01" class="editable-field no-spin" />
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Duracion">Duración (minutos) *</label>
                    <input asp-for="Duracion" type="number" class="editable-field no-spin" />
                    <span asp-validation-for="Duracion" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Estado">Estado</label>
                    <select asp-for="Estado" class="editable-field">
                        <option value="1">Activo</option>
                        <option value="0">Inactivo</option>
                    </select>
                </div>
            </div>

            <div class="form-buttons">
                <a asp-action="Index" class="btn-cancelar">Cancelar</a>
                <button type="submit" class="btn-crear">
                    <i class="bi bi-check-circle"></i> Guardar Cambios
                </button>
            </div>
        </form>
    </div>
</div>
