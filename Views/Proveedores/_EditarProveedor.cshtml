@model Pry_Solu_SalonSPA.Models.Proveedor

@{
    Layout = "~/Views/Main.cshtml";
    ViewData["Title"] = "Editar Proveedor";

    string busqueda = ViewBag.ReturnBusqueda;
    int? estadoFiltro = ViewBag.ReturnEstado;
    string tipoProveedorFiltro = ViewBag.ReturnTipoProveedor;
    int pageNumber = ViewBag.ReturnPageNumber ?? 1;
    int pageSize = ViewBag.ReturnPageSize ?? 10;
}

<link href="~/css/VProveedor/_ProveedorForm.css" rel="stylesheet" />

<div class="crear-proveedor-wrapper">
    <div class="crear-proveedor-box">

        <a asp-action="Index"
           asp-route-busqueda="@busqueda"
           asp-route-estado="@estadoFiltro"
           asp-route-tipoProveedor="@tipoProveedorFiltro"
           asp-route-pageNumber="@pageNumber"
           asp-route-pageSize="@pageSize"
           class="btn-back">
            <i class="bi bi-arrow-left"></i> Volver a la lista
        </a>

        <div class="header-crear">
            <h2>Editar Proveedor</h2>
            <p>Modifique los datos del proveedor</p>
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <form asp-action="Editar" method="post" class="form-crear">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="IdProveedor" />

            @* Parámetros de navegación con nombres que NO colisionan *@
            <input type="hidden" name="returnBusqueda" value="@busqueda" />
            <input type="hidden" name="returnEstado" value="@estadoFiltro" />
            <input type="hidden" name="returnTipoProveedor" value="@tipoProveedorFiltro" />
            <input type="hidden" name="returnPageNumber" value="@pageNumber" />
            <input type="hidden" name="returnPageSize" value="@pageSize" />

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="NomProve" class="form-label">Nombre del Proveedor <span class="text-danger">*</span></label>
                    <input asp-for="NomProve" class="editable-field" required />
                    <span asp-validation-for="NomProve" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Ruc" class="form-label">RUC <span class="text-danger">*</span></label>
                    <input asp-for="Ruc" class="editable-field" maxlength="11" required />
                    <span asp-validation-for="Ruc" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Telefono" class="form-label">Teléfono</label>
                    <input asp-for="Telefono" class="editable-field" maxlength="9" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Correo" class="form-label">Correo Electrónico</label>
                    <input asp-for="Correo" type="email" class="editable-field" />
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="TipoProveedor" class="form-label">Tipo de Proveedor</label>
                    <input asp-for="TipoProveedor" class="editable-field" />
                    <span asp-validation-for="TipoProveedor" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Estado" class="form-label">Estado <span class="text-danger">*</span></label>
                    <select asp-for="Estado" class="editable-field" required>
                        <option value="1">Activo</option>
                        <option value="0">Inactivo</option>
                    </select>
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
            </div>

            <div class="form-buttons">
                <a asp-action="Index"
                   asp-route-busqueda="@busqueda"
                   asp-route-estado="@estadoFiltro"
                   asp-route-tipoProveedor="@tipoProveedorFiltro"
                   asp-route-pageNumber="@pageNumber"
                   asp-route-pageSize="@pageSize"
                   class="btn-cancelar">
                    <i class="bi bi-x-circle"></i> Cancelar
                </a>
                <button type="submit" class="btn-crear">
                    <i class="bi bi-check-circle"></i> Guardar Cambios
                </button>
            </div>
        </form>
    </div>
</div>