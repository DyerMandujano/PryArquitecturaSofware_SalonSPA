@model Pry_Solu_SalonSPA.Models.Marca

@{
    Layout = "~/Views/Main.cshtml";
    ViewData["Title"] = "Editar Marca";

    int IdMarca = ViewBag.IdMarca ?? 0;
}

<link href="~/css/VTipoServicio/_TipoServicioForm.css" rel="stylesheet" />

<div class="crear-tipoServicio-wrapper">
    <div class="crear-tipoServicio-box">

        <a asp-action="Index"
           class="btn-back">← Volver</a>

        <div class="header-crear">
            <h2>Editar Marca</h2>
        </div>

        <form asp-action="Editar" asp-route-id="@IdMarca" method="post" class="form-crear">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="IdMarca" />

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="NomMarca">Marca <span class="text-danger">*</span></label>
                    <input asp-for="NomMarca" class="editable-field" required />
                    <span asp-validation-for="NomMarca" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Estado">Estado <span class="text-danger">*</span></label>
                    <select asp-for="Estado" class="editable-field" required>
                        <option value="1">Activo</option>
                        <option value="0">Inactivo</option>
                    </select>
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
            </div>

            <div class="form-buttons">
                <a asp-action="Index"
                   class="btn-cancelar">Cancelar</a>

                <button type="submit" class="btn-crear">Guardar Cambios</button>
            </div>
        </form>
    </div>
</div>
