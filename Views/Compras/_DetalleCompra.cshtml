@model Pry_Solu_SalonSPA.ViewModels.CompraDetallePorCompraVM
@{
    Layout = "~/Views/Main.cshtml";
    ViewData["Title"] = "Detalle de Compra";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link href="~/css/VVentas/_DetalleVentas.css" rel="stylesheet" />

<div class="container-fluid mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="fas fa-receipt"></i> Detalle de Compra #@Model.IdCompra</h3>
        </div>

        <div class="card-body">
            <!-- Cabecera de la compra -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <h5>Información de la Compra</h5>
                    <table class="table table-bordered">
                        <tr>
                            <th>Fecha:</th>
                            <td>@Model.FechaCompra.ToString("dd/MM/yyyy HH:mm")</td>
                        </tr>
                        <tr>
                            <th>Proveedor:</th>
                            <td>@Model.Proveedor</td>
                        </tr>
                        <tr>
                            <th>Documento:</th>
                            <td>@Model.TipoDoc</td>
                        </tr>
                    </table>
                </div>

                <div class="col-md-6">
                    <h5>&nbsp;</h5>
                    <table class="table table-bordered table-success">
                        <tr class="table-success">
                            <th><strong>Total:</strong></th>
                            <td><strong>S/ @Model.MontoTotal.ToString("N2")</strong></td>
                        </tr>
                    </table>
                </div>
            </div>

            <!-- Detalles de la compra -->
            <h5>Items de la Compra</h5>
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>Producto</th>
                            <th>Cantidad</th>
                            <th>Precio Compra</th>
                            <th>Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var d in Model.DetallesItem)
                        {
                            <tr>
                                <td>@d.Producto</td>
                                <td>@d.Cantidad</td>
                                <td>S/ @d.PrecioCompra.ToString("N2")</td>
                                <td>S/ @d.SubTotal.ToString("N2")</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="table-info">
                        <tr>
                            <td colspan="3" class="text-end"><strong>TOTAL:</strong></td>
                            <td><strong>S/ @Model.MontoTotal.ToString("N2")</strong></td>
                        </tr>
                    </tfoot>
                </table>
            </div>

            <div class="text-center mt-4">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Volver al Listado
                </a>
            </div>
        </div>
    </div>
</div>